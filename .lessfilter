#!/bin/sh
case "$1" in
    *.c|*.go|*.java|*.js|*.json|*.php|*.pl|*.py|\
    *.rb|*.sh|*.sql)
        pygmentize -f 256 "$1";;
    .bashrc|.bash_aliases|.bash_environment)
        pygmentize -f 256 -l sh "$1"
        ;;
    *)
        grep "#\!/bin/bash" "$1" > /dev/null
        if [ "$?" -eq "0" ]; then
            pygmentize -f 256 -l sh "$1"
        else
            exit 1
        fi
esac

exit 0
